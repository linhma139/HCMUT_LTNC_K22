  <body>
      <div class="wrapper">
        <!-- <div id="error"></div> -->
        <form action="/admin/driver" method="GET">
        <!-- <form action=""> -->
          <h1>ADD DRIVER</h1>
          <div class="input-box">
            <div class="ca1">
                <input id="ID" type="text" placeholder="ID" required>
                <i id="sa" class='bx bxs-user'></i>
                <input id="name" type="text" placeholder="Tên tài xế " required>
                <i id="sa2" class='bx bxs-user-circle'></i>
            </div>
          </div>
          <div class="input-box2">
            <label for="sl1" >Loại xe</label><br>
            <select name='lang' onchange="changeColor(this)" id="sl1">
                <option value="#000">None</option>
                <option value="#F02F78">XE CONTAINER</option>
                <option value="#8357F0">XE TẢI</option>
                <option value="#565DF0">XE KHÁCH</option>
            </select>
            <label for="sl2" >Trạng thái</label><br>
            <select name='lang' onchange="changeColor(this)" id="sl2">
                <option value="">None</option>
                <option value="#1ad336">Bình thường</option>
                <option value="orange">Nghỉ Phép</option>
                <option value="#eb1644">Tạm Nghỉ</option>
            </select>
        
          </div>
          <div class="input-box">
            <div class="ca2">
                <input id="CCCD" type="text" placeholder="CCCD/CMND" required>
                <i id="sa3" class='bx bxs-user-circle'></i>
                <input id="phone" type="text" placeholder="Số điện thoại" required>
                <i id="sa4" class='bx bxs-phone'></i>
            </div>
          </div>
          <div class="input-box3">
            <label id="ge" for="gender" >Giới tính</label><br>
            <label id="ge3" for="Nam" >Nam</label>
            <input type="radio" id="Nam" name="gender" required>
            <label id="ge4"for="Nu" >Nữ</label>
            <input type="radio" id="Nu" name="gender" required>
            
        
          </div>
          <div class="input-box">
            <div class="ca2">
                <input id="Email" type="email" placeholder="Email" required>
                <i id="sa2"class='bx bxl-gmail' ></i>
            </div>
          </div>
          <div class="input-box">
            <div class="ca2">
                <input id="LSLX" type="number" placeholder="LSLX" required>
                <i id="sa2"class='bx bxs-lock'></i>
            </div>
          </div>
          <div class="upload">
            <div class="up1">
              <label id=""for="GPLX" >Upload GPLX</label>
                <input id="GPLX" type="file" accept="image/jpg, image/jpeg, image/png" placeholder="GPLX" required>
    
            </div>
          </div>
          <div class="gplx">
            <img id="img1" src="/image/gp3.jpg">
          </div>
          <div class="upload2">
            <div class="up2">
              <label id=""for="Bank" >Upload Bank</label>
                <input id="Bank" type="file" accept="image/jpg, image/jpeg, image/png" placeholder="Bank" required>
    
            </div>
          </div>
          <div class="bank">
            <img id="img2" src="/image/gp3.jpg">
          </div>
          <div class="RS">
            <button type="reset" class="btn2">Reset</button>
            <!-- <input type="button" onclick="checkPassword()" class=" btn" value="Submit" /> -->
            <button type="submit" class="btn" >Submit</button>
          </div>
        
