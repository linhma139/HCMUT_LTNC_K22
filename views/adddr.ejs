                      <!-- </button> --> 
        </form>
      </div>
      <script>
        let gplxImg=document.getElementById("img1");
        let inputImg=document.getElementById("GPLX");
        let bankImg=document.getElementById("img2");
        let inputImg2=document.getElementById("Bank");
        inputImg.onchange = function(){
            gplxImg.src =URL.createObjectURL(inputImg.files[0]);
        }
        inputImg2.onchange = function(){
            bankImg.src =URL.createObjectURL(inputImg2.files[0]);
        }
      </script>
  </body>
